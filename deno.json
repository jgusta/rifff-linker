{
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/,components/,util/,plugins/,islands/,.env dev.ts",
    "serve": "deno run --unstable --allow-write --allow-read --allow-env main.ts",
    "gen-key": "deno run --unstable --allow-write --allow-read --allow-env plugins/session/bin.ts gen-key",
    "mock-server": "deno run -A ./test/util/mockserver/serve.ts",
    "npm:add": "deno run -A https://esm.sh/v96 add",
    "npm:update": "deno run -A https://esm.sh/v96 update",
    "npm:remove": "deno run -A https://esm.sh/v96 remove"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  }
}